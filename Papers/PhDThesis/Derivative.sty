\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{Derivative}[2015/09/10 Derivative Package]

\RequirePackage{mathtools}
\RequirePackage{Logemann}

\DeclareMathOperator{\Div}{div}

\newcommand{\dna}[3][]{\frac{\mathrm{d}^{#1}{#2}}{\mathrm{d}{#3}^{#1}}}
\newcommand{\da}[3][]{\frac{\mathrm{d}^{#1}}{\mathrm{d}{#3}^{#1}}\p{#2}}
\def\d{\@ifstar{\da}{\dna}}

% partial derivative commands
\newcommand{\pda}[3][]{\dfrac{\partial^{#1}{}}{\partial{#3}^{#1}}\p{#2}}
\newcommand{\pd}[3][]{\dfrac{\partial^{#1}{#2}}{\partial{#3}^{#1}}}
%\def\pd{\@ifstar{\pdna}{\pda}}


% mixed partial derivative macros
\newcommand{\mpda}[4][]{\dfrac{\partial^{#1}{#2}}{#3}\p{#4}}
\newcommand{\mpd}[3][]{\dfrac{\partial^{#1}{#2}}{#3}}
%\def\mpd{\@ifstar{\mpdna}{\mpda}}

% divergence
\newcommand{\diva}[1]{\nabla \cdot \p{#1}}
\newcommand{\divna}[1]{\nabla \cdot #1}
\renewcommand{\div}{\@ifstar{\diva}{\divna}}

% gradient
\newcommand{\grada}[1]{\nabla\p{#1}}
\newcommand{\gradna}[1]{\nabla #1}
\newcommand{\grad}{\@ifstar{\grada}{\gradna}}

% laplacian
\newcommand{\laplacea}[1]{\Delta\p{#1}}
\newcommand{\laplacena}[1]{\Delta #1}
\newcommand{\laplace}{\@ifstar{\laplacea}{\laplacena}}
